<section class="text-gray-700 mb-14 body-font overflow-hidden bg-white">
  <div class="container mx-auto flex justify-center">
    <div class="lg:w-4/5 flex flex-wrap">
      <div class="lg:w-1/2 w-full lg:h-auto h-64 lg:flex items-center justify-center">
        <% if @avatar.image.present? %>
          <%= image_tag(@avatar.image, class: "w-full h-full object-cover object-center rounded border border-gray-200") %>
        <% else %>
          <%= image_tag('https://www.pngkit.com/png/full/972-9724041_aprenda-a-desenhar-sombras-para-os-personagens-funny.png', class: "w-full h-full object-cover object-center rounded border border-gray-200") %>
        <% end %>
      </div>
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0 flex items-center justify-center">
        <div>
          <h2 class="text-sm title-font text-gray-500 tracking-widest"><%= @avatar.race.name %></h2>
          <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= @avatar.name %></h1>
          <p class="leading-relaxed"><%= @avatar.description %></p>
          <div class="flex mt-2 items-center pb-5 border-b-2 border-gray-200 mb-5">
            <div class="flex flex-col">
              <span class="mr-3"><%= @avatar.gender %></span>
              <p class="mr-3"><%= @avatar.date_of_birth %></p>
            </div>
          </div>
          <div class="flex items-center">
            <span class="title-font font-medium text-2xl text-gray-900">Ki: <%= @avatar.ki %></span>
            <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
              <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
