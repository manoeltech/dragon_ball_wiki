<div id="<%= dom_id affiliation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= affiliation.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= affiliation.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this affiliation", affiliation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this affiliation", edit_affiliation_path(affiliation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
