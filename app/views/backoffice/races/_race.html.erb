<div id="<%= dom_id race %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= race.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= race.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this race", race, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this race", edit_race_path(race), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
