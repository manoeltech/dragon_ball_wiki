<div class="px-4 sm:px-6 lg:px-8 w-full">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Ranking</h1>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none flex justify-center gap-4">
      <%= link_to "Exportar Ranking", "#", class:"block rounded-md bg-red-500 px-3 py-2 text-center text-sm font-semibold text-yellow-200 shadow-sm hover:bg-red-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-300"%>
    </div>
  </div>
  <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <table class="min-w-full divide-y divide-gray-300">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Posição</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nome</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Ki</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @avatars.each_with_index do |avatar, index| %>
              <tr>
                <td class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <%= index + 1 %>
                    </div>
                    <div class="h-11 w-11 flex-shrink-0">
                      <% if avatar.image.present? %>
                        <%= image_tag avatar.image %>
                      <% else %>
                        <%= image_tag("dragon-ball-logo.png")%>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                  <div class="text-gray-900"><%= link_to avatar.name, backoffice_avatar_path(avatar.id) %></div>
                </td>
                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"><%= avatar.ki %></td></td>
                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                  <% if avatar.status == "active" %>
                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Ativo</span>
                  <% else %>
                    <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">Desativado</span>
                  <% end %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
  </div>
</div>
